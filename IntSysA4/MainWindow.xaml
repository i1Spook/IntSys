<Window x:Name="MainWindowInstance" x:Class="FittsExercise.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FittsExercise" Height="650" Width="650" 
        MouseLeftButtonDown="WindowClicked" 
        ResizeMode="NoResize" WindowStyle="None" BorderThickness="3" Topmost="False" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="tbTimings" HorizontalAlignment="Left" Height="453" TextWrapping="Wrap" VerticalAlignment="Top" Width="159" Text="Exercise 1: After clicking the start button, try to hit the button as fast as you can (10 times)" Canvas.Left="10" Canvas.Top="10" BorderBrush="{x:Null}" BorderThickness="0" SelectionBrush="White"/>
        <Button x:Name="bnStart" Content="Start" Width="75" Click="StartButtonClicked" Margin="284,311,285,311"/>
        <Ellipse x:Name="Target" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="100" Stroke="Black" VerticalAlignment="Top" Width="100" MouseLeftButtonDown="TargetClicked"/>
    </Grid>
</Window>
